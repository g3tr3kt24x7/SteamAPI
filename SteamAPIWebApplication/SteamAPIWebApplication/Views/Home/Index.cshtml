<div class="row">
    <div class="col-md-8">
        <h1 class="home-heading">News</h1>

        @foreach (var items in Model.steamNews)
        {
            <div class="background-custom-full" style="padding:10px;margin-top:5px;width:635px;">
                @*@items.gid<br/>*@
                <h1>@items.title</h1><br />
                @*@items.url<br/>*@
                @*@items.is_external_url<br/>*@
                <h6 class="text-right">
                    <i class="fa fa-book">
                        @if (items.author == "")
                        { <span>-Anonymous</span> }
                        else
                        { <span>- @items.author</span>}
                    </i>
                </h6><br />
                <div style="text-align:justify" class="more">@Html.Raw(items.contents)</div><br />
                <b>@items.feedlabel</b><br />
                @*@items.date<br />*@
                @*@items.feedname*@
            </div>
        }
    </div>

    <div class="col-md-4">
        @*<div class="form-group">
                @{
                    if (Request.IsAuthenticated)
                    {
                        Html.RenderAction("SteamFriendsPartial", "SteamVanityUserName");
