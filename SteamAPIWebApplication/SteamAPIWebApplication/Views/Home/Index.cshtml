@{
    ViewBag.Title = "Home Page";
}
@model SteamAPIWebApplication.ViewModels.SteamHomeViewModel
<style>
    iframe {
        width: 100%;
        height: 500px;
    }

    .more img {
        width: 100%;
    }

    a.morelink {
        text-decoration: none;
        outline: none;
    }

    .morecontent span {
        display: none;
    }

    .background-custom-full {
        background-color: #626262;
        color: #f7f7f7;
    }

        .background-custom-full a {
            color: #f7f7f7;
        }
</style>


<div class="row">
    <h1 style="color:#f7f7f7;">New About Dota 2</h1>
    <div class="col-md-8">
        @foreach (var items in Model.steamNews)
        {
            <div class="background-custom-full" style="padding:10px;margin-top:5px;">
                @*@items.gid<br/>*@
                <h1>@items.title</h1><br />
                @*@items.url<br/>*@
                @*@items.is_external_url<br/>*@
                <h4>@items.author</h4><br />
                <div style="text-align:justify" class="more">@Html.Raw(items.contents)</div><br />
                @items.feedlabel<br />
                @*@items.date<br />*@
                @items.feedname
            </div>
        }
    </div>
    @*<div class="col-md-4" style="margin-top:5px;">
        <div class="background-custom-full">
            @Html.Partial("_VanityUserName")
        </div>
    </div>*@
</div>
