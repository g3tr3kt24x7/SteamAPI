        <div class="form-group">
            @{ Html.RenderAction("LeagueGamePartial", "LeagueGames"); }
        </div>
        @*<div class="form-group">
            @{ Html.RenderAction("DotaTeamsPartial", "DotaTeams");}
        </div>*@
    </div>
</div>
