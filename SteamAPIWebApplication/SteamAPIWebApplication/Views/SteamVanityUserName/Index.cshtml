@model SteamAPIWebApplication.ViewModels.SteamFriendsViewModel
    @using SteamAPIWebApplication.Models
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
Your Steam Id = <a href="@Url.Action("Index","SteamMatchDetails", new { steamid = SteamUserProfile.steamid })">@SteamUserProfile.steamid</a><br />
@for (int i = 0; i < Model.FriendsList.Count; i++)
{
    <a href="@Url.Action("Index","SteamMatchDetails", new { id = Model.vanityUserName.SteamId })"><img src="@Model.svFriendsInfo[i].avatar" alt="@Model.svFriendsInfo[i].personaname" /></a>
    <p>Friends Steam ID= @Model.FriendsList[i].steamid</p><br/>
    <p>Friends Name = @Model.svFriendsInfo[i].personaname</p>
    <p>Relationship= @Model.FriendsList[i].relationship </p><br/>
    <p>Friends Since= @Model.FriendsList[i].friend_since </p><br/>
    
}
